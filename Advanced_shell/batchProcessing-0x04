#!/bin/bash

# List of Pokémon names
POKEMON_LIST=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

# API base URL
API_URL="https://pokeapi.co/api/v2/pokemon/"

# Directory to store the JSON files
OUTPUT_DIR="./pokemon_data"
mkdir -p "$OUTPUT_DIR"

# Function to fetch Pokémon data
fetch_pokemon_data() {
    local pokemon_name=$1
    local output_file="$OUTPUT_DIR/$pokemon_name.json"
    
    echo "Fetching data for $pokemon_name..."
    
    # Fetch data from the API and save it to a file
    curl -s "${API_URL}${pokemon_name}" -o "$output_file"
    
    if [ $? -eq 0 ]; then
        echo "Successfully fetched data for $pokemon_name"
    else
        echo "Error fetching data for $pokemon_name"
    fi
}

# Start parallel data fetching for each Pokémon in the list
for pokemon in "${POKEMON_LIST[@]}"; do
    fetch_pokemon_data "$pokemon" &
done

# Wait for all background processes to finish
wait

echo "All Pokémon data fetched successfully!"
